{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Iniciar Backend com Debug",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/src/index.ts",
			// "program": "${workspaceFolder}/src/tests/session.test.ts",
			"runtimeArgs": [
				"--require",
				"ts-node/register"
			],
			"envFile": "${workspaceFolder}/.env",
			"env": {
				"NODE_ENV": "development"
			}
		}
	]
}